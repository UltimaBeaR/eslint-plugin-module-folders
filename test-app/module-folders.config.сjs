/** @type {import('eslint-plugin-module-folders').ModuleFoldersConfig} */
const config = {
  checks: [
    (modulePath, importingModulePath) => {
      const importingModule = importingModulePath.join("/");
      const module = modulePath.join("/");

      if (importingModule === "src/module1" && module === "src/module2") {
        return "Нельзя из модуля2 импортить модуль1!";
      }

      return undefined;
    },
  ],
};

module.exports = config;
